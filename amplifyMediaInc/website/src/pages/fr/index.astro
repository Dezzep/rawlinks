  <Hero
    tagline="Digital Marketing"
    actions={[
      {
        variant: 'primary',
        text: 'Book a free consultation',
        href: '/contact',
        icon: 'tabler:address-book',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/sean-pollock-PhYq704ffdA-unsplash.jpg', alt: 'AstroWind Hero Image' }}
    >
    <!-- Can add text after amplify in the span if needed. -->
    <Fragment slot="title">
      Amplify <span class="hidden sm:inline"></span> your <span class="text-accent dark:text-white highlight"
        >leads</span
      > & <span class="text-accent dark:text-white highlight"> ROI</span>
    </Fragment>

    <Fragment slot="subtitle">
      Boost your brand, build relationships, and <span class="font-semibold">make more money.</span> Contact us now for
      10 qualified leads within the first month or you don't pay.
    </Fragment>

    <Fragment slot="image">
      <div class="relative h-0 pb-[56.25%]">
